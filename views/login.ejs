<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css');
  
  :root {
    --primary: #6366f1;
    --primary-dark: #4f46e5;
    --secondary: #f59e0b;
    --accent: #ec4899;
    --dark: #0f172a;
    --light: #f8fafc;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Inter', sans-serif;
  }
  
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    position: relative;
    overflow: hidden;
  }
  
  body::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: float 20s infinite linear;
  }
  
  @keyframes float {
    0% { transform: translate(0, 0) rotate(0deg); }
    100% { transform: translate(-50px, -50px) rotate(360deg); }
  }
  
  .premium-container {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 32px;
    padding: 60px 50px;
    width: 100%;
    max-width: 520px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
    z-index: 10;
  }
  
  .premium-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--secondary), var(--accent));
    background-size: 200% 100%;
    animation: shimmer 2s infinite linear;
  }
  
  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: float 15s infinite ease-in-out;
  }
  
  .circle-1 {
    width: 200px;
    height: 200px;
    top: -100px;
    right: -100px;
    animation-delay: 0s;
  }
  
  .circle-2 {
    width: 150px;
    height: 150px;
    bottom: -75px;
    left: -75px;
    animation-delay: -5s;
  }
  
  .header-section {
    text-align: center;
    margin-bottom: 50px;
    position: relative;
  }
  
  .logo-container {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
    animation: pulse 2s infinite ease-in-out;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  .logo-icon {
    font-size: 2rem;
    color: white;
  }
  
  .premium-title {
    font-size: 2.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--light), #e2e8f0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
    letter-spacing: -0.5px;
  }
  
  .premium-subtitle {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
    font-weight: 400;
  }
  
  .input-group {
    position: relative;
    margin-bottom: 35px;
  }
  
  .input-container {
    position: relative;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 5px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .input-container:focus-within {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .input-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.3rem;
    transition: all 0.3s ease;
    z-index: 2;
  }
  
  .premium-input {
    width: 100%;
    padding: 20px 20px 20px 60px;
    background: transparent;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    color: white;
    transition: all 0.3s ease;
  }
  
  .premium-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .premium-input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.05);
  }
  
  .input-container:focus-within .input-icon {
    color: var(--secondary);
    transform: translateY(-50%) scale(1.1);
  }
  
  .password-actions {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 10px;
  }
  
  .password-toggle, .security-indicator {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    padding: 5px;
  }
  
  .password-toggle:hover, .security-indicator:hover {
    color: var(--secondary);
    transform: scale(1.1);
  }
  
  .premium-btn {
    width: 100%;
    padding: 20px;
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    color: white;
    border: none;
    border-radius: 16px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
  }
  
  .premium-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.6s;
  }
  
  .premium-btn:hover::before {
    left: 100%;
  }
  
  .premium-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(99, 102, 241, 0.6);
  }
  
  .btn-icon {
    margin-right: 10px;
  }
  
  .divider {
    display: flex;
    align-items: center;
    margin: 35px 0;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .divider::before, .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: rgba(255, 255, 255, 0.3);
  }
  
  .divider span {
    padding: 0 15px;
    font-size: 14px;
  }
  
  .social-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    margin-bottom: 35px;
  }
  
  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }
  
  .social-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }
  
  .social-btn i {
    font-size: 1.2rem;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }
  
  .footer-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .footer-link:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    transform: translateY(-2px);
  }
  
  .footer-link i {
    margin-right: 8px;
    font-size: 1.1rem;
  }
</style>

<div class="premium-container">
  <div class="decoration-circle circle-1"></div>
  <div class="decoration-circle circle-2"></div>
  
  <div class="header-section">
    <div class="logo-container">
      <i class="fas fa-shield-alt logo-icon"></i>
    </div>
    <h1 class="premium-title">Secure Access</h1>
    <p class="premium-subtitle">Enter your credentials to continue</p>
  </div>
  
  <form action="/login" method="POST">
    <div class="input-group">
      <div class="input-container">
        <i class="fas fa-user-circle input-icon"></i>
        <input 
          type="email" 
          name="email" 
          class="premium-input" 
          placeholder="Enter your email"
          required 
        />
      </div>
    </div>
    
    <div class="input-group">
      <div class="input-container">
        <i class="fas fa-lock input-icon"></i>
        <input 
          type="password" 
          name="password" 
          class="premium-input" 
          id="password"
          placeholder="Enter your password"
          required 
        />
        <div class="password-actions">
          <button type="button" class="security-indicator" title="Password Strength">
            <i class="fas fa-shield"></i>
          </button>
          <button type="button" class="password-toggle" onclick="togglePassword()">
            <i class="fas fa-eye"></i>
          </button>
        </div>
      </div>
    </div>
    
    <button type="submit" class="premium-btn">
      <i class="fas fa-fingerprint btn-icon"></i>
      Authenticate & Continue
    </button>
  </form>
  
  <div class="divider">
    <span>Or continue with</span>
  </div>
  
  <div class="social-grid">
    <a href="#" class="social-btn" style="background: rgba(59, 89, 152, 0.3);">
      <i class="fab fa-facebook-f"></i>
    </a>
    <a href="#" class="social-btn" style="background: rgba(29, 161, 242, 0.3);">
      <i class="fab fa-twitter"></i>
    </a>
    <a href="#" class="social-btn" style="background: rgba(219, 68, 55, 0.3);">
      <i class="fab fa-google"></i>
    </a>
  </div>
  
  <div class="footer-links">
    <a href="/register" class="footer-link">
      <i class="fas fa-user-plus"></i>Create Account
    </a>
    <a href="/update-password" class="footer-link">
      <i class="fas fa-key"></i>Recover Access
    </a>
  </div>
</div>

<script>
  function togglePassword() {
    const password = document.getElementById('password');
    const icon = document.querySelector('.password-toggle i');
    
    if (password.type === 'password') {
      password.type = 'text';
      icon.className = 'fas fa-eye-slash';
    } else {
      password.type = 'password';
      icon.className = 'fas fa-eye';
    }
  }
  
  // Add floating animation to inputs
  document.querySelectorAll('.premium-input').forEach(input => {
    input.addEventListener('focus', () => {
      input.parentElement.style.transform = 'translateY(-2px)';
    });
    
    input.addEventListener('blur', () => {
      input.parentElement.style.transform = 'translateY(0)';
    });
  });
</script>
