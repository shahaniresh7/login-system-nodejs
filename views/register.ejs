<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Luxury Design</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #8B5CF6;
            --primary-dark: #7C3AED;
            --primary-light: #A78BFA;
            --secondary: #F59E0B;
            --accent: #EC4899;
            --gold: #FBBF24;
            --dark: #0F0F1B;
            --light: #F8FAFC;
            --platinum: #E5E7EB;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1E1B4B 0%, #0F0F1B 50%, #500724 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        /* Luxury Background Effects */
        .luxury-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(245, 158, 11, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(236, 72, 153, 0.08) 0%, transparent 50%);
            animation: luxuryFloat 20s ease-in-out infinite;
            z-index: 1;
        }

        @keyframes luxuryFloat {
            0%, 100% { transform: scale(1) rotate(0deg); }
            33% { transform: scale(1.05) rotate(1deg); }
            66% { transform: scale(1.02) rotate(-0.5deg); }
        }

        .sparkle {
            position: fixed;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 2;
        }

        /* Luxury Container */
        .luxury-container {
            width: 100%;
            max-width: 450px;
            background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.12) 0%, 
                rgba(255, 255, 255, 0.08) 50%, 
                rgba(255, 255, 255, 0.04) 100%);
            backdrop-filter: blur(30px);
            -webkit-backdrop-filter: blur(30px);
            border-radius: 28px;
            padding: 45px 40px;
            box-shadow: 
                0 25px 60px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2),
                0 0 0 1px rgba(255, 255, 255, 0.1),
                0 0 60px rgba(139, 92, 246, 0.15);
            position: relative;
            z-index: 3;
            border: 1px solid rgba(255, 255, 255, 0.15);
            overflow: hidden;
        }

        .luxury-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, 
                transparent, 
                rgba(139, 92, 246, 0.3), 
                rgba(245, 158, 11, 0.2), 
                rgba(236, 72, 153, 0.3), 
                transparent);
            border-radius: 30px;
            z-index: -1;
            animation: borderGlow 4s ease-in-out infinite;
            filter: blur(8px);
        }

        @keyframes borderGlow {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 0.8; }
        }

        /* Header Section */
        .luxury-header {
            text-align: center;
            margin-bottom: 35px;
            position: relative;
        }

        .luxury-logo {
            width: 85px;
            height: 85px;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            box-shadow: 
                0 15px 40px rgba(139, 92, 246, 0.4),
                0 0 30px rgba(236, 72, 153, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
            position: relative;
            animation: luxuryFloat 6s ease-in-out infinite;
        }

        .luxury-logo::after {
            content: '';
            position: absolute;
            top: -3px;
            left: -3px;
            right: -3px;
            bottom: -3px;
            background: linear-gradient(45deg, var(--primary), var(--accent), var(--secondary));
            border-radius: 23px;
            z-index: -1;
            opacity: 0.6;
            filter: blur(12px);
        }

        .logo-icon {
            font-size: 2rem;
            color: white;
            filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
        }

        .luxury-title {
            font-size: 2.2rem;
            font-weight: 800;
            background: linear-gradient(135deg, #FFF, var(--platinum), #CBD5E1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 8px;
            line-height: 1.1;
            letter-spacing: -0.5px;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        .luxury-subtitle {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
        }

        /* Form Elements */
        .luxury-form {
            margin-bottom: 30px;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

        .luxury-input-container {
            position: relative;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            border: 1.5px solid rgba(255, 255, 255, 0.2);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            overflow: hidden;
            backdrop-filter: blur(20px);
        }

        .luxury-input-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.15), 
                transparent);
            transition: left 0.6s ease;
        }

        .luxury-input-container:focus-within::before {
            left: 100%;
        }

        .luxury-input-container:focus-within {
            background: rgba(255, 255, 255, 0.12);
            border-color: var(--gold);
            transform: translateY(-2px);
            box-shadow: 
                0 10px 35px rgba(0, 0, 0, 0.25),
                0 0 0 3px rgba(245, 158, 11, 0.1),
                0 0 25px rgba(245, 158, 11, 0.1);
        }

        .luxury-input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.2rem;
            transition: all 0.3s ease;
            z-index: 2;
        }

        .luxury-input {
            width: 100%;
            padding: 16px 18px 16px 55px;
            background: transparent;
            border: none;
            border-radius: 14px;
            font-size: 1rem;
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .luxury-input::placeholder {
            color: rgba(255, 255, 255, 0.5);
            font-weight: 400;
        }

        .luxury-input:focus {
            outline: none;
        }

        .luxury-input-container:focus-within .luxury-input-icon {
            color: var(--gold);
            transform: translateY(-50%) scale(1.1);
            filter: drop-shadow(0 0 6px rgba(245, 158, 11, 0.5));
        }

        /* Password Actions */
        .luxury-password-actions {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            gap: 6px;
        }

        .luxury-action-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 1.5px solid rgba(255, 255, 255, 0.2);
            color: rgba(255, 255, 255, 0.8);
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.3s ease;
            padding: 6px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            backdrop-filter: blur(10px);
        }

        .luxury-action-btn:hover {
            background: rgba(255, 255, 255, 0.15);
            color: var(--gold);
            transform: scale(1.1);
            border-color: rgba(245, 158, 11, 0.3);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.2);
        }

        /* Luxury Button */
        .luxury-btn {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, var(--primary), var(--accent), var(--primary-dark));
            background-size: 200% 200%;
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            box-shadow: 
                0 10px 30px rgba(139, 92, 246, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.1);
            margin-top: 10px;
            animation: gradientShift 3s ease infinite;
        }

        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .luxury-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.3), 
                transparent);
            transition: left 0.6s ease;
        }

        .luxury-btn:hover::before {
            left: 100%;
        }

        .luxury-btn:hover {
            transform: translateY(-3px);
            box-shadow: 
                0 15px 35px rgba(139, 92, 246, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.2),
                0 0 30px rgba(139, 92, 246, 0.3);
        }

        .luxury-btn-content {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            position: relative;
            z-index: 2;
        }

        .luxury-btn-icon {
            font-size: 1.2rem;
            transition: transform 0.3s ease;
        }

        .luxury-btn:hover .luxury-btn-icon {
            transform: translateX(3px) scale(1.1);
        }

        /* Luxury Footer */
        .luxury-footer {
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 25px;
        }

        .luxury-footer-link {
            display: inline-flex;
            align-items: center;
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.06);
            border: 1.5px solid rgba(255, 255, 255, 0.15);
            border-radius: 14px;
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            backdrop-filter: blur(20px);
            position: relative;
            overflow: hidden;
        }

        .luxury-footer-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.1), 
                transparent);
            transition: left 0.6s ease;
        }

        .luxury-footer-link:hover::before {
            left: 100%;
        }

        .luxury-footer-link:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            transform: translateY(-2px);
            border-color: rgba(255, 255, 255, 0.25);
            box-shadow: 
                0 8px 20px rgba(0, 0, 0, 0.2),
                0 0 0 1px rgba(255, 255, 255, 0.1);
        }

        .luxury-footer-link i {
            margin-right: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .luxury-footer-link:hover i {
            transform: scale(1.2);
            color: var(--gold);
        }

        /* Premium Badge */
        .premium-badge {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(135deg, 
                rgba(245, 158, 11, 0.15) 0%, 
                rgba(139, 92, 246, 0.1) 100%);
            padding: 8px 18px;
            border-radius: 20px;
            color: var(--gold);
            font-size: 0.8rem;
            font-weight: 700;
            margin-top: 20px;
            backdrop-filter: blur(20px);
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        .premium-badge i {
            margin-right: 6px;
            font-size: 0.9rem;
        }

        /* Password Strength Indicator */
        .password-strength {
            margin-top: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .strength-bar {
            flex: 1;
            height: 4px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 2px;
            overflow: hidden;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            background: var(--gold);
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        .strength-text {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
            font-weight: 500;
            min-width: 60px;
        }

        /* Responsive */
        @media (max-width: 480px) {
            .luxury-container {
                padding: 35px 30px;
                max-width: 400px;
            }
            
            .luxury-logo {
                width: 75px;
                height: 75px;
            }
            
            .logo-icon {
                font-size: 1.8rem;
            }
            
            .luxury-title {
                font-size: 2rem;
            }
        }

        @media (max-width: 360px) {
            .luxury-container {
                padding: 30px 25px;
                max-width: 340px;
            }
        }
    </style>
</head>
<body>
    <div class="luxury-bg"></div>
    <div class="sparkle"></div>

    <div class="luxury-container">
        <div class="luxury-header">
            <div class="luxury-logo">
                <i class="fas fa-user-plus logo-icon"></i>
            </div>
            <h1 class="luxury-title">User Registration</h1>
            <p class="luxury-subtitle">Create your exclusive account</p>
            <div class="premium-badge">
                <i class="fas fa-shield-check"></i>
                CeylTech Company
            </div>
        </div>

        <form action="/register" method="POST" class="luxury-form">
            <div class="input-group">
                <div class="luxury-input-container">
                    <i class="fas fa-user luxury-input-icon"></i>
                    <input 
                        type="text" 
                        name="username" 
                        class="luxury-input" 
                        placeholder="Choose your username"
                        required 
                    />
                </div>
            </div>
            
            <div class="input-group">
                <div class="luxury-input-container">
                    <i class="fas fa-envelope luxury-input-icon"></i>
                    <input 
                        type="email" 
                        name="email" 
                        class="luxury-input" 
                        placeholder="Your email address"
                        required 
                    />
                </div>
            </div>
            
            <div class="input-group">
                <div class="luxury-input-container">
                    <i class="fas fa-lock luxury-input-icon"></i>
                    <input 
                        type="password" 
                        name="password" 
                        class="luxury-input" 
                        id="password"
                        placeholder="Create secure password"
                        required 
                        oninput="checkPasswordStrength(this.value)"
                    />
                    <div class="luxury-password-actions">
                        <button type="button" class="luxury-action-btn password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="password-strength">
                    <div class="strength-bar">
                        <div class="strength-fill" id="strengthFill"></div>
                    </div>
                    <div class="strength-text" id="strengthText">Weak</div>
                </div>
            </div>
            
            <button type="submit" class="luxury-btn">
                <div class="luxury-btn-content">
                    <i class="fas fa-user-plus luxury-btn-icon"></i>
                    <span>Create Account</span>
                </div>
            </button>
        </form>
        
        <div class="luxury-footer">
            <a href="/" class="luxury-footer-link">
                <i class="fas fa-arrow-left"></i>
                <span>Back to Login</span>
            </a>
        </div>
    </div>

    <script>
        function togglePassword() {
            const password = document.getElementById('password');
            const icon = document.querySelector('.password-toggle i');
            
            if (password.type === 'password') {
                password.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                password.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }

        function checkPasswordStrength(password) {
            const strengthFill = document.getElementById('strengthFill');
            const strengthText = document.getElementById('strengthText');
            
            let strength = 0;
            let text = 'Weak';
            let color = '#EF4444';
            
            if (password.length >= 8) strength += 25;
            if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength += 25;
            if (password.match(/\d/)) strength += 25;
            if (password.match(/[^a-zA-Z\d]/)) strength += 25;
            
            strengthFill.style.width = strength + '%';
            
            if (strength >= 75) {
                text = 'Strong';
                color = '#10B981';
            } else if (strength >= 50) {
                text = 'Good';
                color = '#F59E0B';
            } else if (strength >= 25) {
                text = 'Fair';
                color = '#F59E0B';
            }
            
            strengthText.textContent = text;
            strengthFill.style.background = color;
        }

        // Enhanced input interactions
        document.querySelectorAll('.luxury-input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px)';
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0)';
            });
        });

        // Luxury loading state
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            const btn = this.querySelector('.luxury-btn');
            const originalContent = btn.innerHTML;
            
            btn.innerHTML = `
                <div class="luxury-btn-content">
                    <i class="fas fa-spinner fa-spin"></i>
                    <span>Creating Account...</span>
                </div>
            `;
            btn.disabled = true;
            btn.style.animation = 'gradientShift 1s ease infinite';
            
            setTimeout(() => {
                btn.innerHTML = originalContent;
                btn.disabled = false;
                btn.style.animation = 'gradientShift 3s ease infinite';
                this.submit();
            }, 2500);
        });

        // Create sparkle effects
        function createSparkles() {
            const sparkleContainer = document.querySelector('.sparkle');
            const sparkleCount = 12;
            
            for (let i = 0; i < sparkleCount; i++) {
                const sparkle = document.createElement('div');
                sparkle.style.cssText = `
                    position: absolute;
                    width: 2px;
                    height: 2px;
                    background: white;
                    border-radius: 50%;
                    animation: sparkle ${3 + Math.random() * 2}s infinite ${Math.random() * 3}s;
                    box-shadow: 0 0 8px 2px rgba(255, 255, 255, 0.8), 0 0 16px 4px rgba(255, 255, 255, 0.6);
                    left: ${Math.random() * 100}%;
                    top: ${Math.random() * 100}%;
                `;
                sparkleContainer.appendChild(sparkle);
            }
        }

        createSparkles();
    </script>

    <style>
        @keyframes sparkle {
            0%, 100% { opacity: 0; transform: scale(0); }
            50% { opacity: 1; transform: scale(1); }
        }
    </style>
</body>
</html>
